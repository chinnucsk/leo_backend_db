{require_otp_vsn, "R14B04|R15B01"}.

{deps, [
    {leo_commons, ".*", {git, "https://github.com/leo-project/leo_commons.git", "0.9.2"}},
    {bitcask,     ".*", {git, "https://github.com/basho/bitcask.git",           "bitcask-1.1.6"}},
    {eleveldb,    ".*", {git, "https://github.com/basho/eleveldb.git",          "1.2.2"}},
    {meck,        ".*", {git, "https://github.com/eproxus/meck.git",            "master"}}
]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
